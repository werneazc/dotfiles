# Add aliases for git. The shortcuts are configured within the git global settings file.

if [ -f /etc/profile.d/bash_completion.sh ] && ! shopt -oq posix; then
    source /etc/profile.d/bash_completion.sh
fi

if [ -x "/usr/bin/bat" ] ; then
    alias cat="bat --color -p"
    alias man="man -P \"bat -p\""
fi

function_exists() {
    declare -f -F $1 > /dev/null
    return $?
}

for al in `git config -l | sed -n 's/alias.\([a-z]*\)=.*/\1/p'`; do
    alias g$al="git $al"

    complete_func=_git_$(__git_aliased_command $al)
    function_exists $complete_fnc && __git_complete g$al $complete_func
done

which lsd &> /dev/null
RET=$?
if [[ RET -eq 0 ]] ; then
    alias ls="lsd"
fi

alias ll="ls -lh"
alias la="ls -lah"
